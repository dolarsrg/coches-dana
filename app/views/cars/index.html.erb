<h1 class="h2 mb-3">Registro de vehículos afectados por la dana</h1>

<%= form_with url: cars_path, method: :get, local: true do %>
  <div class="mb-3 d-flex align-items-center">
    <%= label_tag :search, "Buscar por matrícula:", class: "form-label me-2" %>
    <%= text_field_tag :search, params[:search], class: "form-control me-2" %>
    <%= submit_tag "Buscar", class: "btn btn-primary" %>
  </div>
<% end %>

<div class="table-responsive">
  <table class="table">
    <thead class="table-light">
      <tr>
        <th>Matrícula</th>
        <th>Marca</th>
        <th>Modelo</th>
        <th>Color</th>
        <th>Municipio</th>
        <th>Dirección</th>
        <th>Fecha de registro</th>
      </tr>
    </thead>
    <tbody>
      <% @cars.each do |car| %>
        <tr>
          <td><%= link_to car.plate, car %></td>
          <td><%= car.brand %></td>
          <td><%= car.model %></td>
          <td><%= car.color %></td>
          <td><%= car.city %></td>
          <td><%= car.address %></td>
          <td><%= l car.created_at, format: :long %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
